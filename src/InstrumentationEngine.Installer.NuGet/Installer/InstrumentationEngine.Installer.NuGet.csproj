<Project>
  <PropertyGroup>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <TargetExt>.nupkg</TargetExt>
    <PackageId>Microsoft.InstrumentationEngine.Installer</PackageId>
    <CopyBuildOutputToOutputDirectory>false</CopyBuildOutputToOutputDirectory>
    <CopyOutputSymbolsToOutputDirectory>false</CopyOutputSymbolsToOutputDirectory>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildProjectDirectory), 'EnlistmentRoot.marker'))\build\Common.props" />
  <Import Project="$(EnlistmentRoot)\build\Packaging.props" />
  <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" />
  <PropertyGroup>
    <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <ResolveNuGetPackages>true</ResolveNuGetPackages>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <NuspecFile>InstrumentationEngine.Installer.nuspec</NuspecFile>
    <NuspecProperties>$(NuspecProperties);msisuffix=$(MsiSuffix)</NuspecProperties>
    <NuspecProperties>$(NuspecProperties);bindir=$(BinRoot)\$(Configuration)\x64</NuspecProperties>
    <PreserveCompilationContext>false</PreserveCompilationContext>
    <ProjectGuid>{CFFCDAC0-38D2-444E-83D0-49B74C9249F9}</ProjectGuid>
    <OutputType>Library</OutputType>
    <RootNamespace>Microsoft.InstrumentationEngine.Installer</RootNamespace>
    <NoWarn>2008</NoWarn>
    <Platforms>x64</Platforms>
  </PropertyGroup>
  <PropertyGroup>
    <EnableDefaultItems>false</EnableDefaultItems>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="$(BinRoot)\$(Configuration)\x64\InstrumentationEngine.Installer_x64.$(PackageVersion)$(MsiSuffix).msi">
      <Link>InstrumentationEngine.Installer_x64.$(PackageVersion)$(MsiSuffix).msi</Link>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.VisualStudioEng.MicroBuild.Core" Version="$(MicroBuildCoreVersion)" />
  </ItemGroup>
  <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk" />
  <Import Project="$(EnlistmentRoot)\build\Common.targets" />
  <Target Name="VerifyPackCompleteEngine" AfterTargets="Pack" />
</Project>